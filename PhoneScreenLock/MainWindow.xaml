<Window x:Class="PhoneScreenLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneScreenLock"
        mc:Ignorable="d"
        DataContext="{Binding MainWindow, Source={StaticResource Locator}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Grid.ColumnSpan="2" Name="lbBluetoothList" HorizontalContentAlignment="Stretch" ItemsSource="{Binding blueToothDevices}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Path=DeviceName}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="0" Grid.Column="2" VerticalAlignment="Top" Margin="0,10,10,0" HorizontalAlignment="Right" Height="25" Width="50" Command="{Binding refreshList}" >
            Sync
        </Button>
        <Button Grid.Row="1" Height="25" Width="100" Command="{Binding screenLock}" >
            Lock Screen
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Height="25" Width="100" >
            Sync With Device
        </Button>
    </Grid>
</Window>
